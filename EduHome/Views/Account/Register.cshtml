@model RegisterVM
 <!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>sign up</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>sign up</h2>
                            <div asp-validation-summary="ModelOnly" style="color:red"></div>
                        </div>
                        <div class="login-form">
                            <form  method="post">
                                <div>
                                    <input asp-for="@Model.Name" placeholder="Name" style="margin-bottom:0px"/>
                                    <span class="text-danger error-span" asp-validation-for="Name"></span>
                                </div>
                                <div>
                                    <input asp-for="@Model.Surname" placeholder="Surname" style="margin-bottom:0px"/>
                                    <span class="text-danger error-span" asp-validation-for="Surname"></span>
                                </div>
                                <div>
                                    <input asp-for="@Model.Username" placeholder="Username" style="margin-bottom:0px" />
                                    <span class="text-danger error-span" asp-validation-for="Username"></span>
                                </div>
                                <div>
                                    <input asp-for="@Model.Email" placeholder="Email" style="margin-bottom:0px" />
                                    <span class="text-danger error-span" asp-validation-for="Email"></span>
                                </div>
                                <div>
                                    <input asp-for="@Model.Password" placeholder="Password" style="margin-bottom:0px" />
                                    <span class="text-danger error-span" asp-validation-for="Password"></span>
                                </div>
                                <div>
                                    <input asp-for="@Model.RepeatPassword" placeholder="Repeat Password" style="margin-bottom:0px" />
                                    <span class="text-danger error-span" asp-validation-for="RepeatPassword"></span>
                                </div>
                               

                                
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input  asp-for="IsRemember" />
                                        <label for="remember">Remember me</label>
                                        <a href="#">Forgot Password?</a>
                                    </div>
                                    <button type="submit" class="default-btn">sign up</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register end -->
@section Css{
    <style>
        .error-span{
            padding-left: 10px;
            display: inline-block;
            color: red;
            padding-bottom: 20px;
            padding-top: 3px;
        }
    </style>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}