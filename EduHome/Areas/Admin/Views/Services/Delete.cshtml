@model Service
<div class="row">
    <div class="col-7 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Service Delete</h4>

                <form method="post" class="forms-sample">
                    <h2>Are you sure to delete @Model.Name</h2>
                    <button type="submit" class="btn btn-danger mr-2">Yes</button>
                    <a asp-action="Index" class="btn btn-light">No</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}